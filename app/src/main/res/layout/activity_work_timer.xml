<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/timeRemaining"
        android:textSize="@dimen/picker_label_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_gravity="center_horizontal"
        android:gravity="top" />

    <Button
        android:id="@+id/pause_timer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/pause_timer_button_text"
        android:layout_gravity="center_horizontal"
        android:onClick="pauseOrStart"/>

    <Button
        android:id="@+id/stop_timer_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/stop_timer_button_text"
        android:layout_gravity="center_horizontal"
        android:onClick="stopTimer"/>
</LinearLayout>
